pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = "us-east-1"
        AWS_PROFILE           = "terraform"
        AWS_S3_BUCKET         = "movie-database-s3"
    }

    stages {
        stage('Terraform Init') {
            steps {
				sh 'terraform -chdir=./Jenkins/Terraform/CloudFront init'
			}
        }
        stage('Terraform Validate') {
           steps {
				sh 'terraform -chdir./Jenkins/Terraform/CloudFront validate'
			}
        }
        stage('Terraform Apply') {
            steps {
				sh 'terraform -chdir./Jenkins/Terraform/CloudFront apply -auto-approve'
			}
        }
    }
}